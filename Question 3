#include <iostream>
#include <cstring>
using namespace std;

int main() {
    char str[100];
    char seq[4]; 

    cout << "Enter a string: ";
    cin.getline(str, 100); 

    cout << "Enter a sequence of 3 characters: ";
    cin.getline(seq, 4); 

    char* found = strstr(str, seq);

    if (found != NULL)
        cout << "The sequence \"" << seq << "\" is found in the string.\n";
    else
        cout << "The sequence \"" << seq << "\" is NOT found in the string.\n";

    return 0;
}
