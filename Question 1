#include <iostream>
using namespace std;

int main(){
    int size = 100;
    float* sales = new float[size];
    
    cout << "Enter the sales figure for " << size << " items: \n ";
    for(int i = 0 ; i < size ; i++){
        cout << "Enter the figure for the sale [ " << i + 1 << " ] :";
        cin >> sales[i];
    }
        int newsize = 200;
        float* resizedsales = new float[newsize];
        for(int i = 0 ; i < size ; i++){
            resizedsales[i] = sales[i];
        
    }
    for(int i = size ; i < newsize ; i++){
        resizedsales[i] = 0;
    }
        delete[] sales;
        
        size = newsize;
        sales = resizedsales;
        
        cout << "ARRAY successfully resized to hold " << size << " elements\n";
        cout << "The sales of first 5 elements are : \n";
    for(int i = 0 ; i < 5 ; i++){
            cout << sales[i] << '\n';
    }        
          delete[] sales;
          return 0;
}
